<div class= "container">
	<%= simple_form_for([@course, @important]) do |f| %>

	  <div class="form-inline" >
	    <%= f.input :date %>
	 </div>
	 <div class="form-inputs">   
	    <%= f.input :event, required: true, autofocus: true %>
	    <%= f.input :remarks, :label => 'Details' %>
	  </div>

	<% if @edit %>
		  <div class="form-actions">
		    <%= f.button :submit, "Update" %>
		  </div>
		 <% else %>
		   <div class="form-actions">
		    <%= f.button :submit, "Create" %>
		  </div>
	<% end %>

	<% end %>
</div>
