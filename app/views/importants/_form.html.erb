<div class="row">

        <div class="col-md-4 col-md-offset-4 pad-top">
            <hr>
            <% if @edit %>
            <h2 class="intro-text text-center">
                <strong>Change event</strong>
            </h2>
            <% else %>
            <h2 class="intro-text text-center">
                <strong>New event</strong>
            </h2>
            <% end %> 
            <hr>
            <div class = "sign-up  text-center" >
		    	<%= simple_form_for([@course, @important]) do |f| %>

			  <div class="form-inputs" >
			    <%= f.input :date, :as => :date %>
   
			    <%= f.input :event, required: true, autofocus: true %>
			    <%= f.input :remarks, :label => 'Details' %>
			  </div>

			<% if @edit %>
				  <div class="form-actions">
				    <%= f.button :submit, "Update" %>
				  </div>
				 <% else %>
				   <div class="form-actions">
				    <%= f.button :submit, "Create" %>
				  </div>
			<% end %>

			<% end %>
    
            </div>
    </div>
</div>

