
<div class="row">

        <div class="col-md-4 col-md-offset-4 pad-top">
            <hr>
            <h2 class="intro-text text-center">
                <strong>New course</strong>
            </h2>
            <hr>
            <div class = "sign-up  text-center" >
					<%= simple_form_for([current_user, @course]) do |f| %>

					  <div class="form-inputs">
					    <%= f.input :name, required: true, autofocus: true %>
					    <%= f.input :end_date, :label => "Completion date", required: true, :as => :date,:start_year => 2015,:end_year => 2030,:order => [:year] %>
					    <%= f.input :public, :label => "Make this course public", as: :boolean %>
					  </div>

					  <div class="form-actions">
					    <%= f.submit :class => 'slider_btn btn_course' %>
					  </div>
					<% end %>
            </div>
    </div>
</div>
