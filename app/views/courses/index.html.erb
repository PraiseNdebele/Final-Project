 <!--=========== BEGAIN TEAM SECTION ================-->

    <section id="team">
      <div class="container">
      
        <div class="row">
          <div class="col-lg-12 col-md-12">
            <!-- BEGAIN ABOUT HEADING -->
            <div class="heading">
              <h2 class="wow fadeInLeftBig">My Courses</h2>            
            </div>            
            <div class="team_area">
              <!-- BEGAIN TEAM SLIDER -->
              <div class="team_slider">  
              <% @courses.each do |course| %>
                <!-- BEGAIN SINGLE TEAM SLIDE#1 -->              
                <div class="col-lg-3 col-md-3 col-sm-4">
                  <div class="single_team wow fadeInUp">
                  <%= link_to user_course_path(current_user, course) do %>
                    <div class="team_img">
                      <img src="http://thumbs.dreamstime.com/z/stack-books-doodle-vector-32031106.jpg" alt="img">
                    </div>                  
                    <% if course.public || course.user == current_user %>
                    <h5 class=""><%= course.name %></h5>                    
                  <% end %>
                <% end %>
                  </div>
                </div> 
                <% end %>                           
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!--=========== END TEAM SECTION ================-->
