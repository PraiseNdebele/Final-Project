    <section id="subscribe">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 col-md-12">
            <!-- START SUBSCRIBE HEADING -->
            <div class="heading">
              <h2 class="wow fadeInLeftBig">Search</h2>
              <p>Look for other students you many know and see what they are up to.</p>
            </div>
            <!-- BEGAIN SUBSCRIVE FORM -->
              <div class="subscrive_group wow fadeInUp">
                <%= form_tag users_search_path, method: :get do %>
                    <%= text_field_tag :q, params[:q], :class => "form-control subscribe_mail", :type => "text", :placeholder => "Search by name, email, major..." %>
                <%= submit_tag "Search" ,:class => "subscr_btn", :type => "submit", :value => "Search" %>
                <% end %>
                <hr>

              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
