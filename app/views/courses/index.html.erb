<h1>Courses</h1>

    <%= form_tag users_search_path, method: :get do %>
        <%= text_field_tag :q, params[:q] %>
        <%= submit_tag "Search" %>
    <% end %>

<br>

<% if @courses.empty? %>
	<p>You currently have no courses</p>
<% end %>

	<table class = "table">
	<tbody>
		<% @courses.each do |course| %>
			<% if course.public || course.user == current_user %>
		<tr>
			<td><%= course.name %></td> 
			<td><%= link_to 'Show', user_course_path(current_user, course) %></td>
		</tr>
		<% end %>
		<% end %>
	</tbody>
	</table>

	</br>

	<%= link_to 'Add Course', new_user_course_path(current_user) %> 

