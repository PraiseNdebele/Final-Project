<div class= "container">
	<%= simple_form_for([@course, @upload]) do |f| %>

	 <div class="form-inputs">   
	    <%= f.input :document, as: :file %>
	  </div>

	<% if @edit %>
		  <div class="form-actions">
		    <%= f.button :submit, "Update" %>
		  </div>
		 <% else %>
		   <div class="form-actions">
		    <%= f.button :submit, "Upload" %>
		  </div>
	<% end %>

	<% end %>
</div>
