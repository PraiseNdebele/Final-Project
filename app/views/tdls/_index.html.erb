<table class = "table">
	<tr>
		<th>Date</th>
		<th>Task</th>
		<th>Status</th>
		<th colspan='2'></th>
	</tr>
<tbody>	
	<% @tdls.each do |tdl| %>
	<tr>
		<td><%= tdl.date %></td>
		<td><%= tdl.task %></td> 
		<% if tdl.complete %>
			<td><%= link_to complete_path(@course, tdl), method: :patch, data: { confirm: 'Oops! Not yet completed.' } do %>
				<i class="glyphicon glyphicon-ok"></i>
			<% end %></td>
			Complete
		<% else %>
			<td><%= link_to complete_path(@course, tdl), method: :patch, data: { confirm: 'Welldone!' } do %>
				<i class="glyphicon glyphicon-remove"></i>
			<% end %></td>
			Pending
		<% end %>
		</td>
		<% if tdl.user == current_user %>
		<td><%= link_to 'Edit', edit_course_tdl_path(@course, tdl) %></td>
		 <td><%= link_to 'Delete', course_tdl_path(@course, tdl),
          method: :delete,
          data: { confirm: 'Are you sure?' } %></td>
          <% end %>		
	</tr>
	<% end %>	
</tbody>
</table>

</br>




<% if @course.user == current_user  %>
	<%= link_to 'Add', new_course_tdl_path(@course) %>
<i class="glyphicon glyphicon-plus"></i>
<% end %>

